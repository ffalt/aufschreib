<div class="user" id="<%- user.user_id %>">
	<div class="tweets-header">
		<a class="close user-close" href="javascript:;">Ã—</a>
        <span class="user-counts pull-right">
        <%= user.tweets.length %> / <%= user.user_tweet_total_count %>
        <% if (user.user_tweet_total_count - user.tweets.length > 0) { %>
        <a href="javascript:;" title="Alle Tweets von @<%= user.user_id %> anzeigen" onClick="return aufschreib.loadMore('<%- user.user_id %>');"> (Alle anzeigen)</a>
        <% } %>
        </span>
		<div>
			<img class="user-img" src="<%- user.user_img %>" alt=""/>
			<a class="user-name" target="_blank" href="https://twitter.com/<%= user.user_id %>"><%= user.user_name %></a>
			<% if (user.tweets.length>1) { %>
			<div class="user-btns">
					<% consts.cats.forEach(function(cat) {
					if (cat.id !== consts.unknown) {
					%>
					<a class="btn btn-default btn-user btn-tweet-vote" value="<%= cat.id %>" href="javascript:;">
						<i class="glyphicon <%- cat.icon %>"></i> <%= cat.name %></a>
					<% } }); %>
			</div>
			<% } %>
		</div>
	</div>
	<div class="tweets">
		<% include tweets %>
	</div>
</div>
