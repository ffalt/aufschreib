<div class="user" id="<%- user_id %>">
	<div class="row-fluid">
		<a class="close user-close" href="#">Ã—</a>
        <span class="user-counts pull-right">
        <%= tweets.length %> / <%= user_tweet_total_count %>
        <% if (user_tweet_total_count - tweets.length > 0) { %>
        <a href="#" onClick="return aufschreib.loadMore('<%- user_id %>');"> (Load all)</a>
        <% } %>
        </span>
		<div>
			<img class="user-img" src="<%- user_img %>" alt="<%= user_name %>"/>
			<a class="user-name" target="_blank" href="https://twitter.com/<%= user_id %>"><%= user_name %></a>
			<% if (tweets.length>1) { %>
			<div class="user-btns">
				<div class="btn-group">
					<% consts.cats.forEach(function(cat) {
					if (cat.id !== consts.unknown) {
					%>
					<a class="btn btn-user" value="<%= cat.id %>" href="#">
						<i class="<%- cat.icon %>"></i> <%= cat.name %></a>
					<% } }); %>
				</div>
			</div>
			<% } %>
		</div>
	</div>
	<div class="tweets">
		<% include tweets %>
	</div>
</div>
